<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image"
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/logo"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/velocidad"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="start"
        android:layout_marginTop="60dp"
        android:src="@drawable/speedometer" />

    <ImageView
        android:id="@+id/botonOffvelocidad"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginTop="60dp"
        android:src="@drawable/offvelocidad"
        />

    <ImageView
        android:id="@+id/botonOnvelocidad"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginTop="60dp"
        android:src="@drawable/onvelocidad"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/movimiento"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="start"
        android:layout_marginTop="160dp"
        android:src="@drawable/phoneuse" />

    <ImageView
        android:id="@+id/botonOffmovimiento"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginTop="160dp"
        android:src="@drawable/offmovimiento"
        />

    <ImageView
        android:id="@+id/botonOnmovimiento"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginTop="160dp"
        android:src="@drawable/onmovimiento"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/cinturon"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="start"
        android:layout_marginTop="260dp"
        android:src="@drawable/seatbelt"
        />


    <ImageView
        android:id="@+id/botonOffcinturon"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginTop="260dp"
        android:src="@drawable/offcinturon"
        />

    <ImageView
        android:id="@+id/botonOncinturon"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginTop="260dp"
        android:src="@drawable/oncinturon"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/volante"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="start"
        android:layout_marginTop="360dp"
        android:src="@drawable/volante"
        />


    <ImageView
        android:id="@+id/botonOffvolante"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginTop="360dp"
        android:src="@drawable/offvolante"
        />

    <ImageView
        android:id="@+id/botonOnvolante"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginTop="360dp"
        android:src="@drawable/onvolante"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/ojos"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="start"
        android:layout_marginTop="460dp"
        android:src="@drawable/eye"
        />

    <ImageView
        android:id="@+id/botonOffojos"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginTop="460dp"
        android:src="@drawable/offojos"
        />

    <ImageView
        android:id="@+id/botonOnojos"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginTop="460dp"
        android:src="@drawable/onojos"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/speedtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:singleLine="true"
        android:text="00.00 km/hr"
        android:textColor="@android:color/black"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/movementtext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="170dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="El telefono estÃ¡ en uso"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/seatbelttext"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="270dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Sos conductor/pasajero"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/volantetext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="370dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Sos conductor"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ojostext"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="470dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Estas viendo el telefono"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:paddingBottom="0dp"
            android:text="Start" />

        <Button
            android:id="@+id/pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="Pausa"
            android:visibility="gone" />

        <Button
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="Stop"
            android:visibility="gone" />
    </LinearLayout>


</FrameLayout>